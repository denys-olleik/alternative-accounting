@model Accounting.Models.MetalViewModels.DepositMetalViewModel

@{
  ViewData["Title"] = "Deposit metal - " + ConfigurationSingleton.Instance.ApplicationName;
  string headerText = "Deposit metal";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<div class="display-flex margin-bottom-5px background-color-antiquewhite">

  <div class="margin-left-20px flex-1 text-align-right">
    <a asp-action="Metals" asp-controller="Reserves" class="font-Roboto font-size-16px color-blue margin-left-20px">Metals</a>
    <a asp-action="Index" asp-controller="Home" class="font-Roboto font-size-16px color-blue margin-left-20px">Home</a>
  </div>
</div>

<form asp-action="Deposit" asp-controller="Reserve" method="post"
      class="display-flex flex-direction-column margin-bottom-5px">

  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" class="font-size-20px" autocomplete="off" required />
  </div>

  <!-- Type -->
  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="Type">Type</label>
    <select asp-for="Type" class="font-size-20px" required>
      <option value="">Select type:</option>
      <option value="gold">gold</option>
      <option value="silver">silver</option>
    </select>
  </div>

  <!-- Unit -->
  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="Unit">Unit</label>
    <select asp-for="Unit" class="font-size-20px" required>
      <option value="">Select unit:</option>
      <option value="g">g</option><option value="oz">oz</option>
    </select>
  </div>

  <!-- Weight -->
  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="Weight">Weight</label>
    <input asp-for="Weight" class="font-size-20px" autocomplete="off" inputmode="decimal" required />
  </div>

  <button type="submit" class="full-width-regular-button">Deposit</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div><small class="color-red">@error.ErrorMessage</small></div>
  }
  <div class="margin-bottom-5px"></div>
}